<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bezier_tv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rectangle_gradient"
        android:gravity="center"
        android:text="自定义View - Bezier爱心"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/test_tv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rectangle_gradient"
        android:gravity="center"
        android:text="自定义注解动画 + Object Box列表"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/screen_shot_tv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rectangle_gradient_1"
        android:gravity="center"
        android:text="一个调试工具"
        android:textColor="@color/text_white"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/inject_tv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rectangle_gradient_1"
        android:gravity="center"
        android:text="自定义注解动画 - 各个View"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/remote_tv"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/rectangle_gradient_1"
        android:gravity="center"
        android:text="测试"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:visibility="gone" />

</LinearLayout>