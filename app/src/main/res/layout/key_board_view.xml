<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/one_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/two_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="1px"
            android:layout_marginStart="1px"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/three_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="3"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1px"
        android:layout_marginTop="1px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/four_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="4"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/five_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="1px"
            android:layout_marginStart="1px"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="5"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/six_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="6"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="1px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/seven_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="7"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/eight_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="1px"
            android:layout_marginStart="1px"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="8"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nine_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="9"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/cancel_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@color/white"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/close"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/zero_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="1px"
            android:layout_marginStart="1px"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="0"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/confirm_ll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@color/white"
                android:gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/ic_right"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>