            android:textColor="@color/white" />

        <TextView
            android:id="@+id/clip_tv"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_match_coner"
            android:text="粘贴板"
            android:textColor="@color/white" />

        <!--<TextView-->
