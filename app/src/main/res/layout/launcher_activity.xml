<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fs_tv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/orange"
            android:gravity="center"
            android:text="Five start"
            android:textColor="@color/real_white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/flag_tv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#ff0000"
            android:gravity="center"
            android:text="China Flag"
            android:textColor="@color/real_white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/move_view"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/orange"
            android:gravity="center"
            android:text="Move View"
            android:textColor="@color/real_white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/custom_recycler"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#ff0000"
            android:gravity="center"
            android:text="ZzBeeLayout"
            android:textColor="@color/real_white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/remind_tv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/orange"
            android:gravity="center"
            android:text="who remind me ?"
            android:textColor="@color/real_white"
            android:textSize="30sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/person_detail_tv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/orange"
            android:gravity="center"
            android:text="App Jump"
            android:textColor="@color/real_white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/yingshi_tv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#ff0000"
            android:gravity="center"
            android:text="YingShi SDK"
            android:textColor="@color/real_white"
            android:textSize="30sp" />

    </LinearLayout>
</ScrollView>